<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".presentation.players.PlayersActivity">

    <TextView
        android:id="@+id/title_players"
        style="@style/titleSplash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/subtitle_players"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/subtitle_players"
        android:textSize="24sp"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/title_players"
        app:layout_constraintStart_toStartOf="@+id/title_players"
        app:layout_constraintTop_toBottomOf="@+id/title_players" />

    <TextView
        android:id="@+id/title_field_players"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_form_players"
        android:layout_marginTop="32dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/subtitle_players"
        app:layout_constraintStart_toStartOf="@+id/subtitle_players"
        app:layout_constraintTop_toBottomOf="@+id/subtitle_players" />

    <EditText
        android:id="@+id/et_player1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Oponente 1"
        android:maxLines="1"
        android:background="@drawable/background_edit_text"
        app:layout_constraintEnd_toEndOf="@+id/title_field_players"
        app:layout_constraintStart_toStartOf="@+id/title_field_players"
        app:layout_constraintTop_toBottomOf="@+id/title_field_players" />

    <EditText
        android:id="@+id/et_player2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Oponente 2"
        android:maxLines="1"
        android:background="@drawable/background_edit_text"
        app:layout_constraintEnd_toEndOf="@+id/et_player1"
        app:layout_constraintStart_toStartOf="@+id/et_player1"
        app:layout_constraintTop_toBottomOf="@+id/et_player1" />

    <Button
        android:id="@+id/bt_choose_game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Escolher tipo de jogo"
        android:background="@drawable/background_button"
        android:layout_marginBottom="16dp"
        android:textColor="#FFF"
        app:layout_constraintBottom_toTopOf="@+id/tv_develop_by"
        app:layout_constraintEnd_toEndOf="@+id/tv_develop_by"
        app:layout_constraintStart_toStartOf="@+id/tv_develop_by" />

    <TextView
        android:id="@+id/tv_develop_by"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Desenvolvido por Adonai Pinheiro"
        app:layout_constraintEnd_toEndOf="@+id/bt_choose_game"
        app:layout_constraintStart_toStartOf="@+id/bt_choose_game"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>