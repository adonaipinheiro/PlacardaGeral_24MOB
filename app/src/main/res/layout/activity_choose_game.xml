<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".presentation.players.PlayersActivity">

    <TextView
        android:id="@+id/title_players"
        style="@style/titleSplash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/subtitle_players"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Escolha o tipo de jogo"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/title_players"
        app:layout_constraintStart_toStartOf="@+id/title_players"
        app:layout_constraintTop_toBottomOf="@+id/title_players" />


    <ImageView
        android:id="@+id/game_box_1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/background_button"
        android:gravity="center"
        android:padding="16dp"
        android:src="@drawable/ic_truco"
        app:layout_constraintBottom_toBottomOf="@+id/game_box_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subtitle_players" />


    <ImageView
        android:id="@+id/game_box_2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/background_button"
        android:gravity="center"
        android:padding="16dp"
        android:src="@drawable/ic_fut"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/game_box_1" />

    <ImageView
        android:id="@+id/game_box_3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/background_button"
        android:gravity="center"
        android:padding="16dp"
        android:src="@drawable/ic_basket"
        app:layout_constraintEnd_toEndOf="@+id/game_box_1"
        app:layout_constraintStart_toStartOf="@+id/game_box_1"
        app:layout_constraintTop_toBottomOf="@+id/game_box_1" />

    <ImageView
        android:id="@+id/game_box_4"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/background_button"
        android:gravity="center"
        android:padding="16dp"
        android:src="@drawable/ic_ping"
        app:layout_constraintEnd_toEndOf="@+id/game_box_2"
        app:layout_constraintStart_toStartOf="@+id/game_box_2"
        app:layout_constraintTop_toBottomOf="@+id/game_box_2" />

    <Button
        android:id="@+id/bt_choose_game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/background_button"
        android:text="ComeÃ§ar jogo"
        android:textColor="#FFF"
        app:layout_constraintBottom_toTopOf="@+id/tv_develop_by"
        app:layout_constraintEnd_toEndOf="@+id/tv_develop_by"
        app:layout_constraintStart_toStartOf="@+id/tv_develop_by" />

    <TextView
        android:id="@+id/tv_develop_by"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Desenvolvido por Adonai Pinheiro"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/bt_choose_game"
        app:layout_constraintStart_toStartOf="@+id/bt_choose_game" />

</androidx.constraintlayout.widget.ConstraintLayout>